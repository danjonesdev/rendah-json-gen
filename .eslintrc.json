{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": false
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "class-methods-use-this" : 0,
    "comma-dangle": ["error", "never"],
    "func-names": ["error", "never"],
    "linebreak-style": 0,
    "no-mixed-operators": 0
  }
}
